{
    "name": "kloqo-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "echo 'Run specific dev script, e.g., npm run dev:patient'",
        "build": "npm run build --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present",
        "typecheck": "npm run typecheck --workspaces --if-present",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
        "dev:patient": "npm run dev --workspace=patient-app",
        "dev:nurse": "npm run dev --workspace=nurse-app",
        "dev:clinic": "npm run dev --workspace=clinic-admin",
        "dev:superadmin": "npm run dev --workspace=superadmin"
    },
    "devDependencies": {
        "@vitest/ui": "^4.0.15",
        "happy-dom": "^20.0.11",
        "typescript": "^5.7.2",
        "vitest": "^4.0.15",
        "ts-node": "^10.9.2",
        "node-fetch": "^2.7.0",
        "@types/node-fetch": "^2.6.11"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "npm@10.9.0"
}